package taskinfocade;
import java.util.Scanner;

public class MovieController {
    private MovieManager manager;
    private Scanner scanner;

    public MovieController() {
        manager = new MovieManager();
        scanner = new Scanner(System.in);
    }

    public void start() {
        displayMenu();
    }

    public void displayMenu() {
        while (true) {
        	System.out.println("**** wecome to movie*****");
            System.out.println("1. Add Movie");
            System.out.println("2. Clear Movies");
            System.out.println("3. List Movies");
            System.out.println("4. Add Movie by ID");
            System.out.println("5. Load Movies");
            System.out.println("6. Save Movies");
            System.out.println("7. Exit");
            System.out.print("Select an option: ");

            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    Movie movie = setMovieDetails();
                    manager.addMovie(movie);
                    break;
                case 2:
                    manager.clearMovies();
                    break;
                case 3:
                    listMovies();
                    break;
                case 4:
                    addMovieById();
                    break;
                case 5:
                    manager.loadMovies();
                  System.out.println("Movies loaded successfully!");
                    break;
                case 6:
                    manager.loadMovies();
                    System.out.println("Movies loaded successfully!");
                    break;
                case 7:
                    manager.saveMovie(); 
                    System.out.println("Movies saved successfully!");
                    break;

                
                default:
                    System.out.println("Invalid choice. Please select a valid option.");
            }
        }
    }

    public Movie setMovieDetails() {
        System.out.print("Enter movie name: ");
        String name = scanner.nextLine();
        System.out.print("Enter release year: ");
        int year = scanner.nextInt();
        scanner.nextLine();
        System.out.print("Enter the genre: ");
        String genre = scanner.nextLine();

        int id = manager.getMovieId();
        return new Movie(id, name, year, genre);
    }

    public void addMovieById() {
        System.out.print("Enter movie ID: ");
        int id = scanner.nextInt();
        scanner.nextLine();
        System.out.print("Enter movie name: ");
        String name = scanner.nextLine();
        System.out.print("Enter release year: ");
        int year = scanner.nextInt();
        scanner.nextLine();
        System.out.print("Enter the genre: ");
        String genre = scanner.nextLine();

        manager.addMovie(new Movie(id, name, year, genre));
        System.out.println("Movie added successfully!");
    }

    public void listMovies() {
        System.out.println("Movie List:");
        for (Movie movie : manager.getMovies()) {
            System.out.println(movie);
        }
    }
